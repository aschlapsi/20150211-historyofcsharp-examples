<Window x:Class="AsyncSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="URL:" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        <TextBox Name="UrlTextBox" Grid.Column="1" Grid.Row="0" Text="http://www.microsoft.com" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" />
        <Button Grid.Column="2" Grid.Row="0" Click="Button_Click" >Go</Button>
        <TextBox Name="ResultsTextBox" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
